  <script>
    // ====== Config ======
    const DEST_BASE = "https://t.me/Vazadosoficial00_bot"; // SUBSTITUA por seu canal/bot LEGAL
    const MIN_DELAY_MS = 700;  // tempo para garantir carregamento do Pixel
    const MAX_DELAY_MS = 1500; // limite superior (UX)
    const CTA_EVENT = 'Lead';

    // UTM passthrough: mantém parâmetros do anúncio
    const qs = window.location.search;
    const hash = window.location.hash || '';
    const DEST_URL = DEST_BASE + (qs ? qs : '') + (hash ? hash : '');

    // Barra fake de progresso (apenas UX)
    const fill = document.getElementById('fill');
    let w = 0; const step = () => { w = Math.min(100, w + 4 + Math.random()*6); fill.style.width = w + '%'; if (w < 100) requestAnimationFrame(step); }; step();

    // Dispara evento de intenção antes do redirect
    function go(){
      try { fbq('track', CTA_EVENT, { destination: 'telegram' }); } catch(e) {}
      setTimeout(() => { window.location.replace(DEST_URL); }, 350); // pequeno delay pro evento subir
    }

    // Auto-redirect com janela entre MIN e MAX (randômico leve)
    const delay = Math.floor(MIN_DELAY_MS + Math.random()*(MAX_DELAY_MS - MIN_DELAY_MS));
    setTimeout(go, delay);

    // Fallback via CTA
    const cta = document.getElementById('cta');
    cta.addEventListener('click', (e)=>{ e.preventDefault(); go(); });

    // Segurança: se fbq não carregar, ainda assim redireciona
    setTimeout(() => { if (!window.fbq) window.location.replace(DEST_URL); }, MAX_DELAY_MS + 600);
  </script>
